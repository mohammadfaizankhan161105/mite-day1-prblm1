void calcualate_bonus(float salaary, int attandance)
{
    if (attendance > 25)
{ 
bonus =((salary/100.0f) * 5.0f); 
} 
else if(attendance < 10)
{
     bonus= (-1.0f *((salary/ 100.0f) * 50.0f)); 
} 
}
